{
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "env": {
    "NEXT_PUBLIC_SANITY_PROJECT_ID": {
      "description": "Your Sanity project ID"
    },
    "NEXT_PUBLIC_SANITY_DATASET": {
      "description": "Your Sanity dataset (usually 'production')"
    },
    "NEXT_PUBLIC_SANITY_PREVIEW_TOKEN": {
      "description": "Sanity preview token for draft content"
    },
    "DATABASE_URL": {
      "description": "MySQL database connection string"
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT token signing"
    },
    "OAUTH_SERVER_URL": {
      "description": "Manus OAuth server URL"
    },
    "VITE_OAUTH_PORTAL_URL": {
      "description": "Manus OAuth portal URL"
    },
    "VITE_APP_ID": {
      "description": "Manus application ID"
    },
    "VITE_APP_TITLE": {
      "description": "Application title"
    },
    "VITE_APP_LOGO": {
      "description": "Application logo URL"
    },
    "BUILT_IN_FORGE_API_URL": {
      "description": "Manus built-in API URL"
    },
    "BUILT_IN_FORGE_API_KEY": {
      "description": "Manus built-in API key"
    },
    "OWNER_OPEN_ID": {
      "description": "Owner's Manus open ID"
    },
    "OWNER_NAME": {
      "description": "Owner's name"
    }
  },
  "headers": [
    {
      "source": "/api/trpc/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    },
    {
      "source": "/:path*",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    }
  ]
}

